{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                     
    "strict": true,                           
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "allowJs": true,
    "experimentalDecorators": true,
  },
  "include": ["src"],
}
